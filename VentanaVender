    private void btnVenderActionPerformed(java.awt.event.ActionEvent evt) {                                          

        
        
        String socio=Socio();
        if(socio==null)
        {
            JOptionPane.showMessageDialog(this, "Debe seleccionar si es Socio o no.");
            return;
        }
        if(txtVenta.getText().trim().length()==0)
        {
           JOptionPane.showMessageDialog(this, "Debe Ingresar el Identificador de la Venta");
            return; 
        }
        
        Venta ven=new Venta(txtVenta.getText(), cboEvento, socio, txtRut.getText(),Integer.parseInt(txtCantEntradas.getText()) );
        VentaDAO venDAO= new VentaDAO();
        if(venDAO.buscarVenta(txtVenta.getText())==null)
        {
            venDAO.ingresarVenta(ven);
            JOptionPane.showMessageDialog(this, "Venta ingresada correctamente");
        }
        else
            JOptionPane.showMessageDialog(this, "La venta ingresada ya existe, porfavor verifique");
        
        
        
        
        limpiar();
    }                                         
    
    
    public String Socio()
    {
        if (rdbSi.isSelected())
            return "Si";
        if(rdbNo.isSelected())
            return "No";
        return null;
    }
    
    public void limpiar()
    {
        txtVenta.setText(null);
        txtRut.setText(null);
        txtCantEntradas.setText(null);
        btgTipo.clearSelection();
        cboEvento.setSelectedIndex(0);
        txtVenta.requestFocus();
    }
            
